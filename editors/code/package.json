{
  "name": "hqlint",
  "displayName": "HQLint - Hive QL Linter and Formatter",
  "description": "Real-time linting, formatting, and syntax highlighting for HQL (Hive Query Language)",
  "version": "0.6.0",
  "license": "Apache-2.0",
  "publisher": "pi22by7",
  "repository": {
    "type": "git",
    "url": "https://github.com/pi22by7/HQLint.git"
  },
  "activationEvents": [
    "onLanguage:hql"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hql",
        "aliases": [
          "HQL",
          "Hive",
          "hql"
        ],
        "extensions": [
          ".hql",
          ".hive"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hql",
        "scopeName": "source.hql",
        "path": "./syntaxes/hql.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "HQL",
      "properties": {
        "hql.server.path": {
          "type": "string",
          "default": "",
          "description": "Path to the HQL Language Server binary (optional if installed globally)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "compile-tests": "tsc -p .",
    "test": "npm run compile-tests && node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.12",
    "eslint": "^9.38.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
