{
  "name": "hqlint",
  "displayName": "HQLint - Hive QL Linter and Formatter",
  "description": "Real-time linting, formatting, and syntax highlighting for HQL (Hive Query Language)",
  "version": "0.4.1",
  "publisher": "pi22by7",
  "repository": {
    "type": "git",
    "url": "https://github.com/pi22by7/HQLint.git"
  },
  "bugs": {
    "url": "https://github.com/pi22by7/HQLint/issues"
  },
  "homepage": "https://github.com/pi22by7/HQLint#readme",
  "license": "MIT",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Formatters",
    "Programming Languages"
  ],
  "keywords": [
    "hql",
    "hive",
    "sql",
    "linter",
    "formatter"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hql",
        "aliases": [
          "HQL",
          "Hive",
          "hql"
        ],
        "extensions": [
          ".hql",
          ".hive"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hql",
        "scopeName": "source.hql",
        "path": "./syntaxes/hql.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "HQL",
      "properties": {
        "hql.linting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable HQL linting"
        },
        "hql.linting.severity": {
          "type": "string",
          "enum": [
            "Error",
            "Warning",
            "Information",
            "Hint"
          ],
          "default": "Warning",
          "description": "Severity level for linting diagnostics"
        },
        "hql.linting.rules.keywordCasing": {
          "type": "boolean",
          "default": true,
          "description": "Check for lowercase SQL keywords"
        },
        "hql.linting.rules.semicolon": {
          "type": "boolean",
          "default": true,
          "description": "Check for missing semicolons"
        },
        "hql.linting.rules.stringLiteral": {
          "type": "boolean",
          "default": true,
          "description": "Check for unclosed string literals"
        },
        "hql.linting.rules.parentheses": {
          "type": "boolean",
          "default": true,
          "description": "Check for unbalanced parentheses"
        },
        "hql.linting.rules.trailingWhitespace": {
          "type": "boolean",
          "default": true,
          "description": "Check for trailing whitespace"
        },
        "hql.linting.rules.missingComma": {
          "type": "boolean",
          "default": true,
          "description": "Check for possible missing commas in column lists"
        },
        "hql.linting.rules.hiveVariable": {
          "type": "boolean",
          "default": true,
          "description": "Validate Hive variable syntax (${hiveconf:varname})"
        },
        "hql.linting.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "minimum": 1024,
          "description": "Maximum file size in bytes to lint (default 1MB)"
        },
        "hql.formatting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable HQL formatting"
        },
        "hql.formatting.tabWidth": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 8,
          "description": "Number of spaces for indentation"
        },
        "hql.formatting.useTabs": {
          "type": "boolean",
          "default": false,
          "description": "Use tabs instead of spaces for indentation"
        },
        "hql.formatting.keywordCase": {
          "type": "string",
          "enum": [
            "upper",
            "lower",
            "preserve"
          ],
          "default": "upper",
          "description": "Case transformation for SQL keywords"
        },
        "hql.formatting.dataTypeCase": {
          "type": "string",
          "enum": [
            "upper",
            "lower",
            "preserve"
          ],
          "default": "upper",
          "description": "Case transformation for data types"
        },
        "hql.formatting.functionCase": {
          "type": "string",
          "enum": [
            "upper",
            "lower",
            "preserve"
          ],
          "default": "upper",
          "description": "Case transformation for function names"
        },
        "hql.formatting.identifierCase": {
          "type": "string",
          "enum": [
            "upper",
            "lower",
            "preserve"
          ],
          "default": "preserve",
          "description": "Case transformation for identifiers (table/column names)"
        },
        "hql.formatting.indentStyle": {
          "type": "string",
          "enum": [
            "standard",
            "tabularLeft",
            "tabularRight"
          ],
          "default": "standard",
          "description": "Indentation style (standard, tabular left-aligned, or tabular right-aligned)"
        },
        "hql.formatting.linesBetweenQueries": {
          "type": "number",
          "default": 1,
          "minimum": 0,
          "maximum": 5,
          "description": "Number of blank lines between queries"
        },
        "hql.formatting.denseOperators": {
          "type": "boolean",
          "default": false,
          "description": "Use dense spacing for operators (a+b vs a + b)"
        },
        "hql.formatting.newlineBeforeSemicolon": {
          "type": "boolean",
          "default": false,
          "description": "Place semicolon on a new line"
        },
        "hql.logLevel": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info",
          "description": "Logging level for HQL extension output"
        }
      }
    },
    "commands": [
      {
        "command": "hql.formatDocument",
        "title": "Format HQL Document",
        "category": "HQL"
      },
      {
        "command": "hql.lintDocument",
        "title": "Lint HQL Document",
        "category": "HQL"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "compile-tests": "tsc -p ./",
    "pretest": "npm run compile-tests && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^6.2.0",
    "esbuild": "^0.25.12",
    "eslint": "^9.38.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.4",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "sql-formatter": "^15.6.10"
  }
}
