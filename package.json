{
  "name": "hqlint",
  "displayName": "HQLint - Hive QL Linter and Formatter",
  "description": "Real-time linting, formatting, and syntax highlighting for HQL (Hive Query Language)",
  "version": "0.1.0",
  "publisher": "pi22by7",
  "repository": {
    "type": "git",
    "url": "https://github.com/pi22by7/HQLint.git"
  },
  "bugs": {
    "url": "https://github.com/pi22by7/HQLint/issues"
  },
  "homepage": "https://github.com/pi22by7/HQLint#readme",
  "license": "MIT",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Linters",
    "Formatters",
    "Programming Languages"
  ],
  "keywords": [
    "hql",
    "hive",
    "sql",
    "linter",
    "formatter"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "hql",
        "aliases": [
          "HQL",
          "Hive",
          "hql"
        ],
        "extensions": [
          ".hql",
          ".hive"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "hql",
        "scopeName": "source.hql",
        "path": "./syntaxes/hql.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "HQL",
      "properties": {
        "hql.linting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable HQL linting"
        },
        "hql.linting.severity": {
          "type": "string",
          "enum": [
            "Error",
            "Warning",
            "Information",
            "Hint"
          ],
          "default": "Warning",
          "description": "Severity level for linting diagnostics"
        },
        "hql.formatting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable HQL formatting"
        },
        "hql.formatting.indentSize": {
          "type": "number",
          "default": 2,
          "description": "Number of spaces for indentation"
        },
        "hql.formatting.uppercaseKeywords": {
          "type": "boolean",
          "default": true,
          "description": "Convert keywords to uppercase"
        },
        "hql.formatting.newlineBeforeKeywords": {
          "type": "boolean",
          "default": true,
          "description": "Add newline before major keywords (SELECT, FROM, WHERE, etc.)"
        },
        "hql.formatting.alignCommas": {
          "type": "boolean",
          "default": false,
          "description": "Align commas in SELECT lists"
        }
      }
    },
    "commands": [
      {
        "command": "hql.formatDocument",
        "title": "Format HQL Document",
        "category": "HQL"
      },
      {
        "command": "hql.lintDocument",
        "title": "Lint HQL Document",
        "category": "HQL"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/node": "^24.x",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {}
}